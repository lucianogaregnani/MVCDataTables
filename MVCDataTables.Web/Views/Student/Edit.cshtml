@model MVCDataTables.Domain.Entities.Student

<h1>Form Edit</h1>

<form asp-action="Update" asp-controller="Student" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <input asp-for="Name" type="type" class="form-control" placeholder="Full Name" />
        <span asp-validation-for="Name" class="badge text-warning"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Age" type="number" class="form-control" placeholder="Age" />
        <span asp-validation-for="Age" class="badge text-warning"></span>
    </div>

    <div class="mb-3">
        <input asp-for="Country" type="text" class="form-control" placeholder="Country" />
        <span asp-validation-for="Country" class="badge text-warning"></span>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>